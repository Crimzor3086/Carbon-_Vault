{
  "name": "carbonvault-zk-circuits",
  "version": "1.0.0",
  "description": "ZK circuits for CarbonVault carbon offset verification",
  "main": "index.js",
  "scripts": {
    "compile": "circom circuits/CarbonOffsetVerifier.circom --r1cs --wasm --sym -o build",
    "setup": "node scripts/setup.js",
    "test:proof": "node scripts/test-circuit.js",
    "generate-proof": "node scripts/generate-proof.js",
    "verify-proof": "node scripts/verify-proof.js",
    "integrate": "node scripts/integrate-verifier.js",
    "poseidon-hash": "node scripts/poseidon-hash.js",
    "clean": "rm -rf build/*",
    "all": "npm run compile && npm run setup && npm run test:proof"
  },
  "keywords": [
    "zk",
    "circom",
    "carbon",
    "privacy",
    "proof"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "snarkjs": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}

